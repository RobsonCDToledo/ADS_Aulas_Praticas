        <bpmn:flowNodeRef>Task_SelecionarMelhorProposta</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>Task_EmitirOC</bpmn:flowNodeRef>
      </bpmn:lane>
      <bpmn:lane id="Lane_Recepcao" name="Recepção">
        <bpmn:flowNodeRef>Task_ReceberMercFatura</bpmn:flowNodeRef>
