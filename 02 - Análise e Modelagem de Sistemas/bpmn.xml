    <bpmn:task id="Task_EncaminharMaterialSolicitante" name="Encaminhar material ao solicitante">
      <bpmn:incoming>Flow_OK_1</bpmn:incoming>
      <bpmn:outgoing>Flow_OK_2</bpmn:outgoing>
    </bpmn:task>
    <bpmn:sequenceFlow id="Flow_OK_1" sourceRef="Gateway_ConferenciaOK" targetRef="Task_EncaminharMaterialSolicitante">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression"><![CDATA[${aprovado}]]></bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:task id="Task_EncaminharFaturaFinanceiro" name="Encaminhar fatura ao Financeiro">
      <bpmn:incoming>Flow_OK_2</bpmn:incoming>
      <bpmn:outgoing>Flow_OK_3</bpmn:outgoing>
    </bpmn:task>
    <bpmn:sequenceFlow id="Flow_OK_2" sourceRef="Task_EncaminharMaterialSolicitante" targetRef="Task_EncaminharFaturaFinanceiro"/>

    <bpmn:task id="Task_ProgramarPagamento" name="Programar pagamento ao fornecedor">
      <bpmn:incoming>Flow_OK_3</bpmn:incoming>
      <bpmn:outgoing>Flow_EndPago</bpmn:outgoing>
    </bpmn:task>
    <bpmn:sequenceFlow id="Flow_OK_3" sourceRef="Task_EncaminharFaturaFinanceiro" targetRef="Task_ProgramarPagamento"/>
    <bpmn:endEvent id="EndEvent_Pago" name="Pagamento programado">
      <bpmn:incoming>Flow_EndPago</bpmn:incoming>
    </bpmn:endEvent>
    <bpmn:sequenceFlow id="Flow_EndPago" sourceRef="Task_ProgramarPagamento" targetRef="EndEvent_Pago"/>

    <!-- Ramo NOK -->
    <bpmn:sendTask id="Task_RecusarEntrega" name="Recusar entrega e solicitar recolhimento">
      <bpmn:incoming>Flow_NOK_1</bpmn:incoming>
      <bpmn:outgoing>Flow_NOK_End</bpmn:outgoing>
    </bpmn:sendTask>
    <bpmn:sequenceFlow id="Flow_NOK_1" sourceRef="Gateway_ConferenciaOK" targetRef="Task_RecusarEntrega">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression"><![CDATA[${reprovado}]]></bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:endEvent id="EndEvent_NOK" name="Entrega recusada">
      <bpmn:incoming>Flow_NOK_End</bpmn:incoming>
    </bpmn:endEvent>
    <bpmn:sequenceFlow id="Flow_NOK_End" sourceRef="Task_RecusarEntrega" targetRef="EndEvent_NOK"/>

    <!-- Artefatos (dados) -->
    <bpmn:dataObjectReference id="Data_SIC" dataObjectRef="DO_SIC" name="SIC"/>
    <bpmn:dataObject id="DO_SIC" name="SIC"/>
    <bpmn:dataObjectReference id="Data_OC" dataObjectRef="DO_OC" name="OC"/>
    <bpmn:dataObject id="DO_OC" name="OC"/>
    <bpmn:dataObjectReference id="Data_Fatura" dataObjectRef="DO_Fatura" name="Fatura"/>
    <bpmn:dataObject id="DO_Fatura" name="Fatura"/>
  </bpmn:process>

  <!-- Processo do Fornecedor (alto nível) -->
  <bpmn:process id="Process_Forn" isExecutable="false">
    <bpmn:task id="Task_ReceberOC" name="Receber OC"/>
    <bpmn:task id="Task_EnviarMercFatura" name="Enviar mercadoria e fatura"/>
    <bpmn:task id="Task_RecolherMaterial" name="Recolher material (em caso de recusa)"/>
