      <bpmn:incoming>Flow_5</bpmn:incoming>
      <bpmn:outgoing>Flow_6</bpmn:outgoing>
    </bpmn:sendTask>
    <bpmn:sequenceFlow id="Flow_5" sourceRef="Task_SelecionarMelhorProposta" targetRef="Task_EmitirOC"/>

    <bpmn:task id="Task_ReceberMercFatura" name="Receber mercadoria e fatura">
      <bpmn:incoming>Flow_6</bpmn:incoming>
      <bpmn:outgoing>Flow_7</bpmn:outgoing>
    </bpmn:task>
    <bpmn:sequenceFlow id="Flow_6" sourceRef="Task_EmitirOC" targetRef="Task_ReceberMercFatura"/>

    <bpmn:task id="Task_ConferirMercFatura" name="Conferir mercadoria × fatura">
      <bpmn:incoming>Flow_7</bpmn:incoming>
