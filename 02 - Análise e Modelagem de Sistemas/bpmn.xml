        <bpmn:flowNodeRef>Task_AbrirSIC</bpmn:flowNodeRef>
      </bpmn:lane>
      <bpmn:lane id="Lane_Compras" name="Compras">
        <bpmn:flowNodeRef>Task_RealizarCotacoes</bpmn:flowNodeRef>
