      <bpmn:outgoing>Flow_NOK_1</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    <bpmn:sequenceFlow id="Flow_8" sourceRef="Task_ConferirMercFatura" targetRef="Gateway_ConferenciaOK"/>

