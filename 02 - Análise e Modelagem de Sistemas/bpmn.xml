    <bpmn:sequenceFlow id="Flow_3Retry" sourceRef="Gateway_CotacoesOk" targetRef="Task_RealizarCotacoes">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression"><![CDATA[${false}]]></bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:task id="Task_SelecionarMelhorProposta" name="Selecionar melhor proposta (preço e prazo)">
      <bpmn:incoming>Flow_4</bpmn:incoming>
