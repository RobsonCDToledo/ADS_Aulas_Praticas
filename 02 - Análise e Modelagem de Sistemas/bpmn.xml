      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:userTask>

    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent" targetRef="Task_AbrirSIC"/>

    <bpmn:task id="Task_RealizarCotacoes" name="Realizar cotações (≥ 3)">
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
