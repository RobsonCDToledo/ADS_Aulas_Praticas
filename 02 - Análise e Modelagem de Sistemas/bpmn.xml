        <bpmn:flowNodeRef>Task_EncaminharMaterialSolicitante</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>Task_EncaminharFaturaFinanceiro</bpmn:flowNodeRef>
        <bpmn:flowNodeRef>Task_RecusarEntrega</bpmn:flowNodeRef>
      </bpmn:lane>
      <bpmn:lane id="Lane_Financeiro" name="Financeiro">
