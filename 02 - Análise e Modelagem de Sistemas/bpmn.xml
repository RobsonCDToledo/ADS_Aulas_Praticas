    <bpmn:messageFlow id="MF_Recusa_to_Forn" sourceRef="Task_RecusarEntrega" targetRef="Task_RecolherMaterial" name="Solicitar recolhimento"/>
  </bpmn:collaboration>

  <!-- Processo da Organização com lanes -->
  <bpmn:process id="Process_Org" isExecutable="false">
